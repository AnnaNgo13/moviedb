<div class='row'>
  <div class='col-md-8'>
    <% @movies.each do |movie| %>
      <%= render 'movie', movie: movie %>
    <% end %>
  </div>
  <div class='col-md-4'>
    <% @aggs.each do |agg| %>
      <h3><%= agg.name %></h3>
      <ul>
        <% agg.buckets.each do |bucket| %>
          <li><%= bucket.name %> (<%= bucket.count %>)</li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>